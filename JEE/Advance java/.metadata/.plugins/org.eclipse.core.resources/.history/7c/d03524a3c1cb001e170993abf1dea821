package com.java;

import java.util.Arrays;
import java.util.Scanner;
public class Practice {
	
	public static void main(String[] args) {
		String s="ghashyam";
		
		int wovel=0;
		int consonant=0;
		for(int i=0;i<s.length();i++) {
			if(s.charAt(i)=='a'||s.charAt(i)=='i'||s.charAt(i)=='0'||s.charAt(i)=='u'||s.charAt(i)=='e') {
				wovel++;
			}else {
				consonant++;
			}
		}
		System.out.println("wovel:"+wovel);
		System.out.println("consonant:"+consonant);
	}
}

